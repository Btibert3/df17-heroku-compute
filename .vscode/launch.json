{
	"version": "0.2.0",
	"configurations": [{
		"type": "node",
		"request": "launch",
		"name": "Debug",
		"runtimeArgs": [
			"heroku/src/lib/web.js"
		],
		"envFile": "${workspaceRoot}/heroku/run.properties"
	}, {
		"type": "node",
		"request": "launch",
		"name": "Debug Tests",
		"program": "${workspaceRoot}/heroku/node_modules/mocha/bin/_mocha",
		"args": [
			"-u",
			"tdd",
			"--timeout",
			"999999",
			"--colors",
			"--recursive",
			"${workspaceRoot}/heroku/src/spec"
		],
		"internalConsoleOptions": "openOnSessionStart",
		"envFile": "${workspaceRoot}/heroku/test.properties"
	}]
}